<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.teach.javafx.controller.CourseTimeSelectionController">
    <top>
        <Label text="请选择上课时间" style="-fx-font-size: 18px; -fx-padding: 10;"/>
    </top>
    <center>
        <GridPane fx:id="timeGrid" hgap="5" vgap="5" style="-fx-padding: 10;">
            <!-- 第一行：天标题 -->
            <children>
                <Label text="" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <Label text="星期一" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                <Label text="星期二" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                <Label text="星期三" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
                <Label text="星期四" GridPane.rowIndex="0" GridPane.columnIndex="4"/>
                <Label text="星期五" GridPane.rowIndex="0" GridPane.columnIndex="5"/>
                <Label text="星期六" GridPane.rowIndex="0" GridPane.columnIndex="6"/>
                <Label text="星期日" GridPane.rowIndex="0" GridPane.columnIndex="7"/>
                <!-- 接下来5行，每行表示一节课 -->
                <!-- 第一节 -->
                <Label text="第一节" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <CheckBox fx:id="cb_1_1" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                <CheckBox fx:id="cb_1_2" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                <CheckBox fx:id="cb_1_3" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
                <CheckBox fx:id="cb_1_4" GridPane.rowIndex="1" GridPane.columnIndex="4"/>
                <CheckBox fx:id="cb_1_5" GridPane.rowIndex="1" GridPane.columnIndex="5"/>
                <CheckBox fx:id="cb_1_6" GridPane.rowIndex="1" GridPane.columnIndex="6"/>
                <CheckBox fx:id="cb_1_7" GridPane.rowIndex="1" GridPane.columnIndex="7"/>
                <!-- 第二节 -->
                <Label text="第二节" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <CheckBox fx:id="cb_2_1" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                <CheckBox fx:id="cb_2_2" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
                <CheckBox fx:id="cb_2_3" GridPane.rowIndex="2" GridPane.columnIndex="3"/>
                <CheckBox fx:id="cb_2_4" GridPane.rowIndex="2" GridPane.columnIndex="4"/>
                <CheckBox fx:id="cb_2_5" GridPane.rowIndex="2" GridPane.columnIndex="5"/>
                <CheckBox fx:id="cb_2_6" GridPane.rowIndex="2" GridPane.columnIndex="6"/>
                <CheckBox fx:id="cb_2_7" GridPane.rowIndex="2" GridPane.columnIndex="7"/>
                <!-- 第三节 -->
                <Label text="第三节" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <CheckBox fx:id="cb_3_1" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                <CheckBox fx:id="cb_3_2" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
                <CheckBox fx:id="cb_3_3" GridPane.rowIndex="3" GridPane.columnIndex="3"/>
                <CheckBox fx:id="cb_3_4" GridPane.rowIndex="3" GridPane.columnIndex="4"/>
                <CheckBox fx:id="cb_3_5" GridPane.rowIndex="3" GridPane.columnIndex="5"/>
                <CheckBox fx:id="cb_3_6" GridPane.rowIndex="3" GridPane.columnIndex="6"/>
                <CheckBox fx:id="cb_3_7" GridPane.rowIndex="3" GridPane.columnIndex="7"/>
                <!-- 第四节 -->
                <Label text="第四节" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <CheckBox fx:id="cb_4_1" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                <CheckBox fx:id="cb_4_2" GridPane.rowIndex="4" GridPane.columnIndex="2"/>
                <CheckBox fx:id="cb_4_3" GridPane.rowIndex="4" GridPane.columnIndex="3"/>
                <CheckBox fx:id="cb_4_4" GridPane.rowIndex="4" GridPane.columnIndex="4"/>
                <CheckBox fx:id="cb_4_5" GridPane.rowIndex="4" GridPane.columnIndex="5"/>
                <CheckBox fx:id="cb_4_6" GridPane.rowIndex="4" GridPane.columnIndex="6"/>
                <CheckBox fx:id="cb_4_7" GridPane.rowIndex="4" GridPane.columnIndex="7"/>
                <!-- 第五节 -->
                <Label text="第五节" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <CheckBox fx:id="cb_5_1" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                <CheckBox fx:id="cb_5_2" GridPane.rowIndex="5" GridPane.columnIndex="2"/>
                <CheckBox fx:id="cb_5_3" GridPane.rowIndex="5" GridPane.columnIndex="3"/>
                <CheckBox fx:id="cb_5_4" GridPane.rowIndex="5" GridPane.columnIndex="4"/>
                <CheckBox fx:id="cb_5_5" GridPane.rowIndex="5" GridPane.columnIndex="5"/>
                <CheckBox fx:id="cb_5_6" GridPane.rowIndex="5" GridPane.columnIndex="6"/>
                <CheckBox fx:id="cb_5_7" GridPane.rowIndex="5" GridPane.columnIndex="7"/>
            </children>
        </GridPane>
    </center>
    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10;">
            <Button text="取消" onAction="#handleCancel"/>
            <Button text="确定" onAction="#handleConfirm"/>
        </HBox>
    </bottom>
</BorderPane>
