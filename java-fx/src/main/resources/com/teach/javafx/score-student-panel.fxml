<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.teach.javafx.controller.ScoreStudentController">
    <top>
        <HBox id="HBox" alignment="CENTER_LEFT" spacing="5.0">
            <children>
                <FlowPane alignment="TOP_LEFT" prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
                <Pane prefHeight="-1.0" prefWidth="-1.0" HBox.hgrow="ALWAYS" />
                <FlowPane alignment="TOP_RIGHT" prefHeight="40.0" prefWidth="500.0" BorderPane.alignment="CENTER">
                    <children>
                        <Label text="课程名称"> <FlowPane.margin>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                        </FlowPane.margin>
                        </Label>
                        <TextField fx:id="courseNameTextField" promptText="输入课程名称进行模糊查询"> <FlowPane.margin>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                        </FlowPane.margin>
                        </TextField>
                        <Label text="或选择课程"> <FlowPane.margin>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                        </FlowPane.margin>
                        </Label>
                        <ComboBox fx:id="courseComboBox">
                            <FlowPane.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </FlowPane.margin>
                        </ComboBox>
                        <Button mnemonicParsing="false" onAction="#onQueryButtonClick" text="查询">
                            <FlowPane.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </FlowPane.margin>
                        </Button>
                    </children>
                </FlowPane>
            </children>
            <padding>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
            </padding>
        </HBox>
    </top>
    <center>
        <TableView fx:id="dataTableView">
            <columns>
                <TableColumn fx:id="studentNumColumn" prefWidth="200.0" text="学号" />
                <TableColumn fx:id="studentNameColumn" prefWidth="100.0" text="姓名" />
                <TableColumn fx:id="classNameColumn" prefWidth="140.0" text="班级" />
                <TableColumn fx:id="courseNumColumn" prefWidth="120.0" text="课程号" />
                <TableColumn fx:id="courseNameColumn" prefWidth="180.0" text="课程名" />
                <TableColumn fx:id="creditColumn" prefWidth="60.0" text="学分" />
                <TableColumn fx:id="markColumn" prefWidth="60.0" text="成绩" />
                <TableColumn fx:id="rankingColumn" prefWidth="60.0" text="排名" />
            </columns>
        </TableView>
    </center>
</BorderPane>